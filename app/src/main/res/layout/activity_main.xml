<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColorPrimary="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/First_Team_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="sans-serif-black"
                android:text="Team A  "
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#727461"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/first_team_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Goals_teamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:onClick="first_team_goals"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black"
                android:text="Goals" />

            <TextView
                android:id="@+id/First_Team_Cards_Yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Yellow_Cards_teamA_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:onClick="first_team_fouls_yellow"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black"
                android:text="Yellow Cards" />

            <TextView
                android:id="@+id/First_Team_Cards_Red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Red_Cards_teamA_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:onClick="first_team_fouls_red"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black"
                android:text="Red Cards" />

        </LinearLayout>

        <Button
            android:id="@+id/middle_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#ABB845" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/Second_Team_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="sans-serif-black"
                android:text="Team B"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#727461"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/second_team_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Goals_teamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:onClick="second_team_goals"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black"
                android:text="Goals" />

            <TextView
                android:id="@+id/Second_Team_Cards_Yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Yellow_Cards_teamB_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:onClick="second_team_fouls_yellow"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black"
                android:text="Yellow Cards" />

            <TextView
                android:id="@+id/Second_Team_Cards_Red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Red_Cards_teamB_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:onClick="second_team_fouls_red"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black"
                android:text="Red Cards" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:onClick="Reset"
        android:text="Reset"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        />


</RelativeLayout>